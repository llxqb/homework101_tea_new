<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.bank.AddBankCardActivity">

    <include layout="@layout/common_toolbar" />

    <View style="@style/line_height_05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:text="持卡人"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/card_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@null"
            android:hint="请填写持卡人姓名" />

    </LinearLayout>

    <View
        style="@style/line_height_05"
        android:layout_marginStart="@dimen/dp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:text="银行卡号"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/card_num_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入银行卡"
            android:inputType="number"
            android:maxLength="20" />

    </LinearLayout>

    <View
        style="@style/line_height_05"
        android:layout_marginStart="@dimen/dp_20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:gravity="center"
        android:text="*请绑定持卡人本人的银行卡"
        android:textColor="#E42A2A"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/next_step_tv"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/gradient_withdraw_sure_bg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


</LinearLayout>