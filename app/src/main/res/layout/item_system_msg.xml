<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/system_msg_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-09-09 21:00"
        android:textColor="@color/first_text_color"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/msg_icon_iv"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_14"
        android:src="@mipmap/system_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_msg_time_tv" />

    <TextView
        android:id="@+id/system_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_14"
        android:text="系统消息"
        android:textColor="#9495A0"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/msg_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/system_msg_time_tv" />


    <TextView
        android:id="@+id/msg_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_white_round_solid_5"
        android:text="恭喜您！成功购买了陈老师的数学月辅导,ssssssssssss"
        android:textColor="@color/first_text_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/msg_icon_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_type_tv" />
</android.support.constraint.ConstraintLayout>
