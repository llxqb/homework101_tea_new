<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.mine.ExpectedTotalIncomeActivity">

    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:background="@mipmap/my_wallet_background">

                <TextView
                    android:id="@+id/expected_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_41"
                    android:layout_marginTop="@dimen/dp_36"
                    android:text="预计收益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/expected_income_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expected_income"
                    android:layout_marginStart="@dimen/dp_41"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="8000.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_42" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_4"
                android:text="预计收益包括"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_7"
                android:text="1.学生付费后的60%为辅导费用。\n2.学生是您成单后的一个10%的提成费用。\n3.其他老师成单后，转给您辅导的剩余的60%的辅导"
                android:textColor="@color/color_80"
                android:textSize="@dimen/sp_14" />


            <View
                style="@style/line_height_1"
                android:layout_marginTop="@dimen/dp_26" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_18"
                android:text="明细"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>