<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pop_contain"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_30"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/popup_close"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/pop_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_white_round_solid_5"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/dp_160"
        android:orientation="vertical">

        <!-- 弹框方式一   标题，副标题 ，左右两个按钮  退出登录-->
        <TextView
            android:id="@+id/common_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:minHeight="@dimen/dp_50"
            android:textColor="@color/first_text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/common_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:minHeight="@dimen/dp_40"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_14" />


        <LinearLayout
            android:id="@+id/dialog_style1_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">

            <Button
                android:id="@+id/style1_left_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/selector_cancal_bg"
                android:text="取消"
                android:textColor="@drawable/selector_red_text_bg"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/style1_right_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/selector_sure_bg"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@mipmap/button"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_6"
            android:text="知道了"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</RelativeLayout>